<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="669.0" prefWidth="840.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.intissar.proyecto2.controller.AlumnoController">
   <HBox prefHeight="39.0" prefWidth="850.0">
      <children>
          <ComboBox fx:id="idiomaComboBox" onAction="#cambiarIdioma" prefHeight="41.0" prefWidth="121.0">
              <items>
                  <FXCollections fx:factory="observableArrayList">
                      <String fx:value="Español" />
                      <String fx:value="English" />
                  </FXCollections>
              </items>
          </ComboBox>
           <Button fx:id="MenuButton" onAction="#irAmenu" prefHeight="31.0" prefWidth="90.0" text="Menu" />
           <Button fx:id="helpButton" onAction="#abrirAyuda" text="Help" />
           <Button fx:id="btnGenerarInforme" onAction="#generarInforme" prefHeight="38.0" prefWidth="154.0" text="Generar Informe" />
      </children>
   </HBox>
    <Label prefHeight="44.0" prefWidth="815.0" styleClass="title-label" text="Gestión de Alumnos" textAlignment="CENTER" />
   <HBox prefHeight="29.0" prefWidth="814.0">
      <children>
      
          <!-- Campo de texto para introducir el DNI que se quiere buscar -->
          <TextField fx:id="buscarField" prefHeight="34.0" prefWidth="615.0" promptText="Buscar alumno..." />
      
          <!-- Botón para activar la búsqueda -->
          <Button onAction="#buscarAlumno" prefHeight="42.0" prefWidth="114.0" styleClass="action-button" text="Buscar" />
      </children>
   </HBox>

    <!-- Campos para ingresar datos -->
    <TextField fx:id="dniField" prefHeight="33.0" prefWidth="746.0" promptText="DNI" />
    <TextField fx:id="nombreField" promptText="Nombre" />
    <TextField fx:id="apellido1Field" promptText="Apellido 1" />
    <TextField fx:id="apellido2Field" promptText="Apellido 2" />

    <HBox prefHeight="61.0" prefWidth="847.0" spacing="10">
        <Button fx:id="agregarButton" onAction="#agregarAlumno" text="Agregar Alumno" />
        <Button fx:id="modificarButton" onAction="#modificarAlumno" text="Modificar Alumno" />
        <Button fx:id="eliminarButton" onAction="#eliminarAlumno" text="Eliminar Alumno" />

    </HBox>

    <!-- Tabla para mostrar los alumnos -->
    <TableView fx:id="alumnosTable" prefHeight="363.0" prefWidth="817.0">
        <columns>
            <TableColumn fx:id="dniColumn" text="DNI" />
            <TableColumn fx:id="nombreColumn" text="Nombre" />
            <TableColumn fx:id="apellido1Column" text="Apellido 1" />
            <TableColumn fx:id="apellido2Column" text="Apellido 2" />
        </columns>
    </TableView>

</VBox>
